
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="Edit" method="post">
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    <input type="text" name="Author" value="@Model.Price" placeholder="Price" class="form-control" />
    <input type="text" name="Edition" value="@Model.Qty" placeholder="Qty" class="form-control" />
    <input type="submit" value="Edit" class="btn btn-danger" />
</form>
