
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Id</td>
            <td>@b.Name</td>
            <td>@b.Price</td>
            <td>@b.Qty</td>
            <td><a href="Edit/@b.Id" class="btn btn-info">Edit</a></td>
            <td><a href="Delete/@b.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>